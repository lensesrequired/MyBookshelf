<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_book_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.coe.asmarek.mybookshelf.BookDetails"
    tools:showIn="@layout/app_bar_book_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgBookCoverDetailsPage"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@+id/imgBookCoverDetailsPage"
            android:id="@+id/titleField">
            <TextView
                android:text="Title"
                style="@style/FieldTextView"
                android:id="@+id/txtTitleLabel" />

            <TextView
                android:text="Title"
                style="@style/FieldTextView"
                android:id="@+id/txtTitle" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@+id/titleField"
            android:id="@+id/authorField">
            <TextView
                android:text="Author"
                style="@style/FieldTextView"
                android:id="@+id/txtAuthorLabel" />

            <TextView
                android:text="Author"
                style="@style/FieldTextView"
                android:id="@+id/txtAuthor" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@+id/authorField"
            android:id="@+id/publisherField">
            <TextView
                android:text="Publisher"
                style="@style/FieldTextView"
                android:id="@+id/txtPublisherLabel" />

            <TextView
                android:text="Publisher"
                style="@style/FieldTextView"
                android:id="@+id/txtPublisher" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@id/publisherField"
            android:id="@+id/publishYearField">
            <TextView
                android:text="Publish Year"
                style="@style/FieldTextView"
                android:id="@+id/txtYearLabel" />

            <TextView
                android:text="Publish Year"
                style="@style/FieldTextView"
                android:id="@+id/txtYear" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@id/publishYearField"
            android:id="@+id/editionField">
            <TextView
                android:text="Edition"
                style="@style/FieldTextView"
                android:id="@+id/txtEditionLabel" />

            <TextView
                android:text="Edition"
                style="@style/FieldTextView"
                android:id="@+id/txtEdition" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@id/editionField"
            android:id="@+id/ISBNField">
            <TextView
                android:text="ISBN"
                style="@style/FieldTextView"
                android:id="@+id/txtISBNLabel" />

            <TextView
                android:text="ISBN"
                style="@style/FieldTextView"
                android:id="@+id/txtISBN" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldsLayout"
            android:layout_below="@id/ISBNField"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:text="Delete"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:id="@+id/btnDelete" />

            <Button
                android:text="Edit"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:id="@+id/btnEdit" />

            <Button
                android:text="Look Up"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:id="@+id/btnLookUp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>